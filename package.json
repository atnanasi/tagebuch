{
  "name": "tagebuch",
  "scripts": {
    "build": "npm run --silent clean && ./build.sh --mode development",
    "build:prod": "npm run --silent clean && ./build.sh --mode production",
    "clean": "find dist/* -not -name 'index.html' -not -name '.gitignore' | xargs rm -rf",
    "deploy": "npm run --silent build && ./deploy.sh",
    "deploy:prod": "npm run --silent build:prod && ./deploy.sh",
    "lint": "standard --plugin html 'src/*.{js,vue}'",
    "fmt": "npm run --silent lint -- --fix",
    "dev": "npm run --silent clean && env `cat .env` webpack-dev-server --mode development"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/preset-typescript": "^7.0.0-beta.46",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^8.0.0-beta",
    "css-loader": "^0.28.11",
    "eslint-plugin-html": "^4.0.3",
    "firebase-tools": "^3.18.4",
    "mini-css-extract-plugin": "^0.4.0",
    "standard": "^11.0.1",
    "ts-loader": "^4.3.0",
    "typescript": "^2.8.3",
    "vue-loader": "^15.0.10",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.8.1",
    "webpack-cli": "^2.1.2"
  },
  "dependencies": {
    "@firebase/app": "^0.3.2",
    "@firebase/auth": "^0.5.2",
    "@firebase/firestore": "^0.5.3",
    "@firebase/storage": "^0.2.2",
    "axios": "^0.18.0",
    "babel-polyfill": "^6.26.0",
    "bulma": "^0.7.1",
    "raven-js": "^3.25.2",
    "uuid": "^3.2.1",
    "vue": "^2.5.16",
    "vue-async-computed": "^3.3.1",
    "vue-router": "^3.0.1",
    "vuefire": "^2.0.0-alpha.11",
    "webpack-dev-server": "^3.1.4"
  }
}
